<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppBancoDigital.View.LoginRegister"
             xmlns:control="clr-namespace:Xamarin.Forms.MaskedEntry;assembly=Xamarin.Forms.MaskedEntry">

    <!--<control:MaskedEntry Keyboard="Numeric" Placeholder="digite seu cpf" Mask="XXX.XXX.XXX-XX" ClearButtonVisibility="WhileEditing" ></control:MaskedEntry>-->
    
    <ContentPage.Content>
        <StackLayout>
            
            <!-- TELA DE LOGAR EM UMA CONTA EXISTENTE -->
            
            <Grid RowDefinitions="*, *, *, *, *, *, *" ColumnDefinitions="*, *, *" IsVisible="true" x:Name="gridLogin">
                <StackLayout Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" >
                    <Image x:Name="details" Aspect="AspectFill" HeightRequest="300" />
                </StackLayout>
                <StackLayout Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3">
                    <Image x:Name="logo" WidthRequest="150" HeightRequest="150" />
                </StackLayout>
                <StackLayout Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" HorizontalOptions="Center" VerticalOptions="Center">
                    <Label x:Name="lbl__titulo" Text="Seja Bem Vindo (a)!" FontSize="Title" FontAttributes="Bold" TextColor="#711cb6" />
                    <Label x:Name="lbl__subtitulo" Text="Logue em sua conta" HorizontalTextAlignment="Center" FontSize="Subtitle" TextColor="#000" FontAttributes="Bold" />
                </StackLayout>
             
                <StackLayout x:Name="stc__cpf" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Vertical">
                    <Label Text="Informe seu CPF" Margin="20, 0, 0, 0" />
                    <Frame BackgroundColor="Transparent" BorderColor="#711cb6" Margin="20, 10" Padding="5" HorizontalOptions="FillAndExpand" CornerRadius="10">
                        <StackLayout Orientation="Horizontal">
                            <Frame BackgroundColor="#711cb6" HeightRequest="40" WidthRequest="40" CornerRadius="10" Padding="5" Margin="0">
                                <Image x:Name="img__cpf" Aspect="AspectFill" Margin="0" />
                            </Frame>
                            <control:MaskedEntry x:Name="cpf__entry" HorizontalOptions="FillAndExpand" Keyboard="Numeric" Placeholder="999.999.999-99" Mask="XXX.XXX.XXX-XX" ClearButtonVisibility="WhileEditing" ></control:MaskedEntry>
                        </StackLayout>
                    </Frame>
                </StackLayout>
                
                <StackLayout x:Name="stc__password" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Vertical">
                    <Label Text="Informe sua senha" Margin="20, 0, 0, 0" />
                    <Frame BackgroundColor="Transparent" BorderColor="#711cb6" Margin="20, 10" Padding="5" HorizontalOptions="FillAndExpand" CornerRadius="10">
                        <StackLayout Orientation="Horizontal">
                            <Frame BackgroundColor="#711cb6" HeightRequest="40" WidthRequest="40" CornerRadius="10" Padding="5" Margin="0">
                                <Image x:Name="img__password" Aspect="AspectFill" Margin="0" />
                            </Frame>
                            <Entry IsPassword="True" x:Name="password__entry" HorizontalOptions="FillAndExpand" Keyboard="Numeric" Placeholder="**************" ClearButtonVisibility="WhileEditing" />
                        </StackLayout>
                    </Frame>
                </StackLayout>
                
                <StackLayout x:Name="stc__btn__logar" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Vertical" >
                    <Button x:Name="btn__logar" Text="Entrar" BackgroundColor="#711cb6" TextColor="#fff" Margin="20, 10" CornerRadius="10" Padding="10" />
                    <Label x:Name="lbl__criar__conta" Text="Não possui uma conta? Clique aqui!" HorizontalOptions="Center" VerticalOptions="Start">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer x:Name="onClickLabelCriarConta" Tapped="onClickLabelCriarConta_Tapped" />
                        </Label.GestureRecognizers>
                    </Label>
                </StackLayout>
            </Grid>
            
            <!-- TELA DE CRIAR CONTA -->

            <Grid RowDefinitions="*, *, *, *, *, *, *" ColumnDefinitions="*, *, *" IsVisible="false" x:Name="gridCadastrar" >
                <StackLayout Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" HorizontalOptions="Center" VerticalOptions="Center" Orientation="Vertical" >
                    <Label x:Name="lbl__titulo__register" Text="Seja Bem Vindo (a)!" FontSize="Title" FontAttributes="Bold" TextColor="#711cb6" />
                    <Label x:Name="lbl__subtitulo__register" Text="Crie sua conta gratuitamente." HorizontalTextAlignment="Center" FontSize="Subtitle" TextColor="#000" FontAttributes="Bold" />
                </StackLayout>
                <StackLayout x:Name="stc__nome__register" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Vertical">
                    <Label Text="Informe seu nome" Margin="20, 0, 0, 0" />
                    <Frame BackgroundColor="Transparent" BorderColor="#711cb6" Margin="20, 10" Padding="5" HorizontalOptions="FillAndExpand" CornerRadius="10">
                        <StackLayout Orientation="Horizontal">
                            <Frame BackgroundColor="#711cb6" HeightRequest="40" WidthRequest="40" CornerRadius="10" Padding="5" Margin="0">
                                <Image x:Name="img__nome__register" Aspect="AspectFill" Margin="0" />
                            </Frame>
                            <Entry x:Name="nome__entry__register" HorizontalOptions="FillAndExpand" Keyboard="Text" Placeholder="Gabriel R. de Oliveira" ClearButtonVisibility="WhileEditing" />
                        </StackLayout>
                    </Frame>
                </StackLayout>
                
                <StackLayout x:Name="stc__cpf__register" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Vertical">
                    <Label Text="Informe seu CPF" Margin="20, 0, 0, 0" />
                    <Frame BackgroundColor="Transparent" BorderColor="#711cb6" Margin="20, 10" Padding="5" HorizontalOptions="FillAndExpand" CornerRadius="10">
                        <StackLayout Orientation="Horizontal">
                            <Frame BackgroundColor="#711cb6" HeightRequest="40" WidthRequest="40" CornerRadius="10" Padding="5" Margin="0">
                                <Image x:Name="img__cpf__register" Aspect="AspectFill" Margin="0" />
                            </Frame>
                            <control:MaskedEntry x:Name="cpf__entry__register" HorizontalOptions="FillAndExpand" Keyboard="Numeric" Placeholder="999.999.999-99" Mask="XXX.XXX.XXX-XX" ClearButtonVisibility="WhileEditing" ></control:MaskedEntry>
                        </StackLayout>
                    </Frame>
                </StackLayout>

                <StackLayout x:Name="stc__datanascimento__register" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Vertical">
                    <Label Text="Informe sua data de nascimento" Margin="20, 0, 0, 0" />
                    <Frame BackgroundColor="Transparent" BorderColor="#711cb6" Margin="20, 10" Padding="5" HorizontalOptions="FillAndExpand" CornerRadius="10">
                        <StackLayout Orientation="Horizontal">
                            <Frame BackgroundColor="#711cb6" HeightRequest="40" WidthRequest="40" CornerRadius="10" Padding="5" Margin="0">
                                <Image x:Name="img__datanascimento__register" Aspect="AspectFill" Margin="0" />
                            </Frame>
                            <DatePicker TextColor="#000" x:Name="datanascimento__dtpck" Format="dd/MM/yyyy" HorizontalOptions="FillAndExpand" />
                        </StackLayout>
                    </Frame>
                </StackLayout>

                <StackLayout x:Name="stc__password__register" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Vertical">
                    <Label Text="Crie uma senha" Margin="20, 0, 0, 0" />
                    <Frame BackgroundColor="Transparent" BorderColor="#711cb6" Margin="20, 10" Padding="5" HorizontalOptions="FillAndExpand" CornerRadius="10">
                        <StackLayout Orientation="Horizontal">
                            <Frame BackgroundColor="#711cb6" HeightRequest="40" WidthRequest="40" CornerRadius="10" Padding="5" Margin="0">
                                <Image x:Name="img__password__register" Aspect="AspectFill" Margin="0" />
                            </Frame>
                            <Entry IsPassword="True" x:Name="password__entry__register" HorizontalOptions="FillAndExpand" Keyboard="Numeric" Placeholder="**************" ClearButtonVisibility="WhileEditing" />
                        </StackLayout>
                    </Frame>
                </StackLayout>

                <StackLayout x:Name="stc__password__confirmar__register" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Vertical">
                    <Label Text="Confirme sua senha" Margin="20, 0, 0, 0" />
                    <Frame BackgroundColor="Transparent" BorderColor="#711cb6" Margin="20, 10" Padding="5" HorizontalOptions="FillAndExpand" CornerRadius="10">
                        <StackLayout Orientation="Horizontal">
                            <Frame BackgroundColor="#711cb6" HeightRequest="40" WidthRequest="40" CornerRadius="10" Padding="5" Margin="0">
                                <Image x:Name="img__password__confirmar__register" Aspect="AspectFill" Margin="0" />
                            </Frame>
                            <Entry IsPassword="True" x:Name="password__confirmar__entry__register" HorizontalOptions="FillAndExpand" Keyboard="Numeric" Placeholder="**************" ClearButtonVisibility="WhileEditing" />
                        </StackLayout>
                    </Frame>
                </StackLayout>

                <StackLayout x:Name="stc__btn__register" Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Vertical" >
                    <Button x:Name="btn__register" Text="CRIAR CONTA" BackgroundColor="#711cb6" TextColor="#fff" Margin="20, 10" CornerRadius="10" Padding="10" />
                    <Label x:Name="lbl__logar" Text="Possui uma conta? Faça login!" HorizontalOptions="Center" VerticalOptions="Start">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer x:Name="onClickLabelLogin" Tapped="onClickLabelLogin_Tapped" />
                        </Label.GestureRecognizers>
                    </Label>
                </StackLayout>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>