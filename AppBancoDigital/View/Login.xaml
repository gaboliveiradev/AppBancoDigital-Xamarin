<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppBancoDigital.View.Login">
    <ContentPage.Content>
        <Grid RowDefinitions="*, *, *, *, *, *, * " ColumnDefinitions="*">
            <Label x:Name="lbl_logo" Style="{StaticResource lbl_logo}"/>
            <Entry x:Name="ety_cpf" Style="{StaticResource ety_cpf}" />
            <Entry x:Name="ety_senha" Style="{StaticResource ety_senha}" />
            <Button x:Name="btn_logar" Style="{StaticResource btn_logar}" />
            <StackLayout Grid.Column="0" Grid.Row="4">
                <Label x:Name="lbl_criar_conta" Style="{StaticResource lbl_criar_conta}" />
                <Label x:Name="lbl_esqueci_senha" Style="{StaticResource lbl_esqueci_senha}" />
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>