<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppBancoDigital.View.Home">
    
    <ContentPage.Content>
        <StackLayout>
            <Grid RowDefinitions="*, *" ColumnDefinitions="*, *, *">
                <StackLayout Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3">
                    <Grid RowDefinitions="*, *" ColumnDefinitions="*, *, *">
                        <Frame BackgroundColor="#711cb6" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" HeightRequest="120" />
                        <Frame x:Name="frm_saldo" CornerRadius="10" BackgroundColor="red" Margin="15" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" HeightRequest="120" />
                    </Grid>
                </StackLayout>
            </Grid>
            <Grid RowDefinitions="*, *, *, *, *, * " ColumnDefinitions="*, *, *">
                
            </Grid>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>